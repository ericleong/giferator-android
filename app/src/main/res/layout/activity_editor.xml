<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditorActivity">

    <FrameLayout
        android:id="@+id/canvas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/blends"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/no_image"
            android:text="@string/no_image"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.dreamynomad.giferator.RatioSurfaceView
            android:id="@+id/surface"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <Space
        android:id="@+id/center_space"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/canvas"
        android:layout_alignParentBottom="true" />

    <Spinner
        android:id="@+id/blends"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add"
        android:layout_toLeftOf="@id/center_space"
        android:layout_alignParentLeft="true"
        tools:ignore="RtlHardcoded" />

    <Spinner
        android:id="@+id/ratios"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/clear"
        android:layout_toRightOf="@id/center_space"
        android:layout_alignParentRight="true"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/add"
        android:text="@string/add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_toLeftOf="@id/center_space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/clear"
        android:text="@string/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@id/center_space"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>
